<% provide(:title, "ユーザー一覧") %>
<div class="container-fluid z-2 pb-5">
  <div class="user col-lg-8 mx-auto mt-5 post_form">
    <%= image_tag 'users_icon.png', class: "mb-3", size: '90' %>
    <h2 class="mb-4 form_title">ユーザー</h2>
    <% if @users.exists? %>
      <% @users.each do |user| %>
        <%= link_to user_path(user.id) do%>
          <div class="user_block">
            <div class="user_image">
              <%= render "shared/user_image", user: user %>
            </div>
            <div class="user_right">
              <%= user.name %>
              <p><%= user.introduction %></p>
            </div>
          </div>
        <% end %>
      <% end %>
    <% else %>
      <p class="text_color">ユーザーはいません</p>
    <% end %>
    <%= paginate @users %>
  </div>
</div>
